pipeline {
    agent  docker {
        image 'alexsuch/angular-cli:6.0.0-beta.7'
    }
    stages {
        stage('Build') {
            steps {

                sh 'ng build'
                sh 'docker build -t showmethereturn:v1 .'

              dir('kubernetes')  {
                sh 'kubectl create -f showmethereturn.yaml'
              }

            }
        }

    }
}
